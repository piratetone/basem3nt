<p id="notice"><%= notice %></p>

<p class="game">
  <strong>Time:</strong>
  <%= @game.time.strftime("%a, %b %d @ %I:%M %p") %>
</p>

<%= link_to 'Edit', edit_game_path(@game), :class => "btn btn-info btn-sm" %> 
<%= link_to 'Back',  games_path, :class => "btn btn-warning btn-sm" %>
<%= link_to 'Destroy', @game, method: :delete, :class => "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %>
