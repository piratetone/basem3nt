<h1><b>Games</b></h1>

<table>
  <thead class="game">
    <tr>
      <th class="th">Gamer Tag</th> &nbsp &nbsp
      <th class="th">Time</th>
      <th class="th">Gamer Tag</th>

    </tr>
  </thead>

  <tbody class="game">
    <% @games.each do |game| %>
      <tr id="gameRow">
        <td><%= game.user_id %></td>
        <td><%= link_to  game.time.strftime("%a %b %d @ %I:%M %p"), game %> </td> &nbsp &nbsp
         <td><%= game.friend_id %> </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-success">
<%= link_to 'New Game',  new_game_path,  :class=>"white" %>
</div>
