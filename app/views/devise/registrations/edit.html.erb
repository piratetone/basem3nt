<h2>Edit <%= resource_name.to_s.humanize %></h2>




<div> 
  <div class="avatar">
    <%= image_tag current_user.avatar.url %>
    <div class="basicInfo">
    <h3> <%= current_user.gamertag %> </h3>
  </div>
  <div class="basicInfo">
    <p class="basicInfo-location"> <%= current_user.location %> </p>
  </div>
</div>
  <%= devise_error_messages!  %>
<div class="form1">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if flash[:alert] %> 
      <div class="alert alert-error"> 
        <button class="close" data-dismiss="alert">x</button> 
        <%= flash[:alert] %> 
       </div> 
    <% end %> 

        <div><%= f.file_field :avatar, :style =>"display:hidden;" %>
        </div>
        <br />

        <div>
          <%= f.text_field :gamertag %>
        </div>
          <br />

        <div>
          <%= f.text_field :full_name, autofocus: true %>
        </div>
        <br />
        
        <div>
          <%= f.text_field :location %>
        </div>
        <br />

        <div>
         <%= f.text_area :bio,  rows:"3"  %>
        </div>
        <br />

        <div>
          <%= f.text_field :twitter %>
        </div>  
        <br />

        <div>
         <%= f.text_field :twitch %>
        </div>
        <br />

        <div>
          <%= f.text_field :psn %>
        </div>
        <br />

        <div>
          <%= f.email_field :email, autofocus: true %>
        </div>
        <br />

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
         <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
         </div>
        <% end %>

        <div>
         <%= f.password_field :password, help: "leave blank if you don't want to change it", autocomplete: "off" %>
        </div>
        <br />

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
         </div>
        <br />

        <div>
          <%= f.password_field :current_password, help:"we need your current password to confirm your changes",  autocomplete: "off" %>
        </div><br /> 

    </div>
     <br />
     <div>
        <%= link_to "Back", :back, :class => "btn btn-info", :style=>"color:#FFF;" %>
        <%= f.submit "Update", :class => "btn btn-success" %>  
        <button type="button" class="btn btn-info">Cancel</button>
     </div>

    <% end %>
    <br /><br />

  <div class="cancelBtn"> 
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger btn-xs" %>
  </div>


