<!DOCTYPE html>
<html>
<head>
  <title>Basem3nt</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= nav_bar :fixed => :top, :responsive => true, :brand => "Basem3nt", :class =>"navbar-inverse navbar-fixed-top navbar" do %>
     <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "contact", contact_path %>
        <%= menu_item "gamers", gamers_path %>
        <%= menu_item "games", games_path %>
        <%= menu_item "forums", forums_path %>
        <%= menu_item "statuses", statuses_path %>
    <% end %>

    <% if current_user %>
      <div class="sign form-group">
        <p><%= link_to current_user.full_name, "../profiles/show" %></p>
        <p><%= link_to "Settings", edit_user_registration_path, method: :get, :class =>  "navbar-link, ../users/edit" %></p>
        <p><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link, logInLogOut' %></p>
      </div>

       <% else %>
        <%= menu_group :pull => :right do %>
            <%= bootstrap_form_for @user, :url => session_path(:user) do |f| -%>
              <div class="sign form-group">
                <p><%= f.email_field :email,  placeholder: "Email", :class => "input", autofocus: true, hide_label: :true %>
                </p>
                <p><%= f.password_field :password, placeholder:"password", :class=> "input", autocomplete: "off", hide_label: :true %>
                  </p>
                  <p><%= f.submit "Sign in", :class=>  'btn btn-xs btn-success' %>
                  </p>
                <% end -%>
                <p><%= link_to "Sign Up", new_user_registration_path, :class=>  'btn btn-xs btn-primary' %>
                </p>
            <% end %>
        <% end %>
    <% end %>

    <div class=" container">
      <% flash.each do |type, message| %> 
        <div class="alert <%= flash_class(type) %>"> 
          <button class="close" data-dismiss="alert">x</button> 
          <%= message %>
        </div>  
      <% end %>

      <%= yield %>         
   
    </div> 
  </body>
</html>
